@page "/Tecnicos/Details/{tecnicoId:int}"
@rendermode InteractiveServer
@inject TecnicoService tecnicoService
@inject NavigationManager navigation
<link rel="stylesheet" href="StyleDetails.css" />

<PageTitle> Detalles T&eacute;cnicos</PageTitle>


<div class="container mt-5">
    <div class="card p-4 shadow-lg border-primary">
        <div class="card-header">
            <h5 class="card-title text-center mb-4 bg-primary text-white p-2 rounded">Eliminar T&eacute;cnico</h5>
        </div>

        <div class="card-body">
            <div class="list-details">
                <ul class="list-group">
                    @*Cobro Id*@
                    <li class="list-group-item">
                        <strong> T&eacute;cnico Id:</strong> @Tecnico.TecnicoId
                    </li>

                    @*Nombre del Tecnico*@
                    <li class="list-group-item">
                        <strong>Nombre Tecnico:</strong> @Tecnico.NombresTecnico
                    </li>

                    @*Sueldo por hora*@
                    <li class="list-group-item">
                        <strong>Sueldo por hora:</strong> @Tecnico.SueldoHora
                    </li>

                    @*Descripcion*@
                    <li class="list-group-item">
                        <strong>Descripc&iacute;on Tecnico:</strong> @Tecnico.TipoTecnico.Descripcion
                    </li>
                </ul>
            </div>
        </div>


        <div class="card-footer d-flex justify-content-between">
            <a href="/Tecnicos/Index" class="btn btn-outline-primary bi bi-arrow-left mt-3"> Volver</a>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public int TecnicoId { get; set; }
    public Tecnicos Tecnico { get; set; } = new Tecnicos();

    protected override async Task OnInitializedAsync()
    {
        Tecnico = await tecnicoService.Buscar(TecnicoId);
    }

}
